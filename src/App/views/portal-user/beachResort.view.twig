{% extends "base.view.twig" %}

{% block main %}
    <h1 class="balneario">{{ beachResort.fields.name }}</h1>
<section class="resort-section">
    <p class="resort-description">{{ beachResort.fields.description }}</p>
    <p class="resort-city">Ciudad: {{ city.fields.name }}</p>
    <ol class="resort-services">
        <li>Servicios:
            {% for service in service_colection %}
                <li class="service-item">âˆ™ {{ service.name }}</li>
            {% endfor %}
        </li>
    </ol>
</section>

    <section class="reserveUnit">
        <form id="reservationForm" method="post" action="/beachResort">
            <fieldset id = "reservation">
                <label>
                    Llegada:
                </label>
                <input type="date" id="startDate" name="startDate" {% if start_date is not null %}value="{{ start_date }}" {% endif %}/>
                <label>
                    Salida:
                </label>
                <input type="date" id="endDate" name="endDate" {% if end_date is not null %}value="{{ end_date }}" {% endif %}/>
                <object  type="image/svg+xml" data="./../imagenes/beachResorts/{{ beachResort.fields.id }}/complejo.svg" id="svgImage"></object>

                <p id="lastUnit"></p>
                <p id="ticket"></p>

                <input type="hidden" id="selectedUnits" name="selectedUnits" value="" />
                <input type="hidden" id="beachResortId" name="beachResortId" value="{{ beachResort.fields.id }}" />
                <input type="hidden" id="beachResortName" name="beachResortName" value="{{ beachResort.fields.name }}" />
                <input type="hidden" id="reservationAmount" name="reservationAmount" value="" />

                <input type="button" value="Continuar" class="bContinuar" id="continueBtn"></input>

            
            </fieldset>
            
            
        </form>

    </section>
    
{% endblock %}

{% block javascript %}
<script>
   const beachResortId = {{ beachResort.fields.id }};
</script>

{% endblock %}
