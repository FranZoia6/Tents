{% extends "base.view.twig" %}

{% block main %}
    <h1>Edición de ciudad</h1>
    <form class="newCity" action="/portal-admin/cities/edit" method = "POST" enctype="multipart/form-data">  
        <input type="hidden" id="id" name="id" value= "{{ cityId }}" required>
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" value = "{{cityName}}" required>
        <label for="imagen">Selecciona una imagen:</label>
        <input type="file" id="imagen" name="imagen" accept="image/*">
        <section>
            <button class="bReserva" type="submit">Envíar</button>
        </section>
    </form>
{% endblock %}